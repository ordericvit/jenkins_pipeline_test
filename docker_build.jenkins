#!groovy
// Run docker build
properties([disableConcurrentBuilds()])

pipeline {
	agent {
		label 'master'
		}
	triggers { pollSCM ('*/3 * * * *')}
	options {
		buildDiscarder(logRotator(numToKeepStr: '10', artifactNumToKeepStr: '10'))
		timestamps()
	}

	stages {
		stage("create docker image") {
			
				steps {
					echo "--start build image ---"
					dir ('docker_template') {
							sh 'docker build .'
					}
				}
			}
		}
	}	
